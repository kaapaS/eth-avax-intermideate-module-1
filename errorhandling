pragma solidity 0.8.18;

contract errorhandling{

    uint public count=0;

    function testRequire(uint amount) public{
        require(amount > 100,"Amount  greater than 100");
        count++;
    }

    function testRevert(uint amount) public {
        if(!(amount > 150)){
            revert("Amount greater than 150");
        }
        count++;
    }

    function testAssert(uint amount) public{
        assert(amount > 100);
        count++;
    }

    error CustomError(uint amount, string message);

    function testCustomError(uint amount) public{
        if(amount <= 100){
            revert CustomError(amount,"Amount should greater than 100");
        }
        count++;
    }
}
